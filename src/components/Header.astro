---
import Menu from "@lucide/astro/icons/menu";
import UserRound from "@lucide/astro/icons/user-round";
---

<div class="navbar absolute top-0">
  <div class="flex-1">
    <a class="btn btn-ghost text-xl z-10" href="/"
      >zen (t)halen (a)beysiri (g)unawardhana</a
    >
  </div>
  <div class="flex-none hidden md:flex">
    <ul class="menu menu-horizontal px-1">
      <li>
        <details>
          <summary>about</summary>
          <ul class="bg-base-100 p-2 w-40">
            <li><a href="/projects" aria-label="projects">projects</a></li>
            <li>
              <a href="/philosophy" aria-label="philosophy">my philosophy</a>
            </li>

            <li>
              <a href="/skills" aria-label="skills & experience"
                >skills & experience</a
              >
            </li>
          </ul>
        </details>
      </li>
      <li>
        <details>
          <summary>content</summary>
          <ul class="bg-base-100 p-2">
            <li>
              <a
                href="https://www.youtube.com/@excessiveelectronics"
                aria-label="videos">videos</a
              >
            </li>
            <li><a href="/blog" aria-label="blog">blog</a></li>
          </ul>
        </details>
      </li>

      <li><a href="/contact">contact</a></li>
      <li><a href="/profile"><UserRound /></a></li>
    </ul>
  </div>
  <div class="flex-none md:hidden">
    <div class="drawer drawer-end">
      <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content">
        <label for="my-drawer-4" class="drawer-button btn btn-ghost btn-square">
          <p class="hidden">Open Menu</p>
          <Menu />
        </label>
      </div>
      <div class="drawer-side">
        <label
          for="my-drawer-4"
          aria-label="close sidebar"
          class="drawer-overlay"></label>
        <ul class="menu bg-base-200 text-base-content min-h-full w-80 p-4">
          <li>
            <a href="/projects">projects</a>
          </li>
          <li>
            <a href="/philosophy">my philosophy</a>
          </li>
          <li>
            <a href="/skills">skills & experience</a>
          </li>
          <li>
            <a href="https://www.youtube.com/@excessiveelectronics">videos</a>
          </li>
          <li>
            <a href="/blog">blog</a>
          </li>
          <li>
            <a href="/contact">contact me</a>
            <li><a href="/profile">profile</a></li>
            <li class="mb-0 mt-auto">
              <a href="https://ko-fi.com/zenee" class="underline">Support me</a>
            </li>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
